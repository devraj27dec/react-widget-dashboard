{
  "categories": [
    {
      "id": "user_activity",
      "title": "User Activity",
      "widgets": [
        {
          "id": "active_users",
          "type": "stat",
          "title": "Active Users",
          "dataSource": "/api/active-users",
          "refreshInterval": 5000,
          "config": {
            "icon": "users",
            "color": "blue"
          }
        },
        {
          "id": "login_trend",
          "type": "chart",
          "title": "Login Trend",
          "dataSource": "/api/login-trend",
          "chartType": "line",
          "config": {
            "xKey": "date",
            "yKey": "logins"
          }
        }
      ]
    },
    {
      "id": "system_health",
      "title": "System Health",
      "widgets": [
        {
          "id": "cpu_usage",
          "type": "gauge",
          "title": "CPU Usage",
          "dataSource": "/api/cpu-usage",
          "config": {
            "maxValue": 100,
            "unit": "%"
          }
        },
        {
          "id": "server_status",
          "type": "list",
          "title": "Server Status",
          "dataSource": "/api/servers",
          "config": {
            "displayFields": ["name", "status"]
          }
        }
      ]
    }
  ]
}
